<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/question_list_left_blank"
        android:layout_width="10.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/question_list_right_blank"
        android:layout_width="10.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/list_question_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5.0dip"
        android:layout_toLeftOf="@id/question_list_right_blank"
        android:layout_toRightOf="@id/question_list_left_blank"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black"
        android:textSize="18.0dip" />

    <TextView
        android:id="@+id/list_question_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_question_title"
        android:layout_below="@id/list_question_title"
        android:gravity="center"
        android:textColor="@color/dimgray"
        android:textSize="15.0dip" />

    <TextView
        android:id="@+id/list_question_isanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_question_title"
        android:layout_toLeftOf="@id/question_list_right_blank"
        android:gravity="center"
        android:textColor="@color/dimgray"
        android:textSize="15.0dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_below="@id/list_question_isanswer" />

</RelativeLayout>