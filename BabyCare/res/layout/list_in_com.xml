                android:background="@drawable/com_list_card_btn1" >

                <TextView
                    android:id="@+id/list_com_bottom_centerpoint1"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/list_com_bottom_centerpoint1"
                    android:background="@drawable/com_card_trans_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/list_com_bottom_centerpoint1"
                    android:text="转发"
